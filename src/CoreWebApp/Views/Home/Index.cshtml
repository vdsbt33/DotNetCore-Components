@{
    ViewData["Title"] = "Início";
}

@{
    DateTime currentDate = DateTime.Now;
}
    <div class="calendarList">
        <!-- Last month -->
        <partial name="~/Views/Shared/Components/_Calendar.cshtml" model="@currentDate.AddMonths(-1)" />

        <!-- Current month -->
        <partial name="~/Views/Shared/Components/_Calendar.cshtml" model="@currentDate" />

        <!-- Next month -->
        <partial name="~/Views/Shared/Components/_Calendar.cshtml" model="@currentDate.AddMonths(1)" />
    </div>

